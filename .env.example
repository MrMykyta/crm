# App
NODE_ENV=production
PORT=3000

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=app
DB_USER=app
DB_PASSWORD=app

# MongoDB
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=app
MONGO_USER=root
MONGO_PASSWORD=root
MONGO_AUTH_SOURCE=admin
# Optional override
# MONGO_URI=mongodb://user:pass@mongo:27017/app?authSource=admin

# Files System
FILES_STORAGE_ROOT=
FILES_MAX_SIZE_MB=20
FILES_PUBLIC_ENABLED=true
FILES_SIGNING_SECRET=dev-files-secret
FILES_SIGNED_URL_TTL_SEC=86400
